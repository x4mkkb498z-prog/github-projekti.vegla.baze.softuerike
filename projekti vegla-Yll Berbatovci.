saveToFile();
                cout << "Libri u kthye.\n";
            }
            return;
        }
    }
    cout << "Libri nuk u gjet.\n";
}


int main() {
    loadFromFile();

    int choice;
    do {
        cout << "\n===== LIBRARY MANAGEMENT SYSTEM =====\n";
        cout << "1. Shto liber\n";
        cout << "2. Shfaq librat\n";
        cout << "3. Kerko liber\n";
        cout << "4. Huazo liber\n";
        cout << "5. Kthe liber\n";
        cout << "0. Dil\n";
        cout << "Zgjedhja: ";
        cin >> choice;

        switch (choice) {
            case 1: addBook(); break;
            case 2: showBooks(); break;
            case 3: searchBook(); break;
            case 4: borrowBook(); break;
            case 5: returnBook(); break;
            case 0: cout << "Dalje nga programi.\n"; break;
            default: cout << "Zgjedhje e pavlefshme.\n";
        }
    } 
    while (choice != 0);

    return 0;
}
